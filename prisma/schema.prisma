generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Patient {
  id           Int      @id @default(autoincrement())
  name         String
  dateOfBirth  String
  gender       String
  address      String
  phone        String?
  prescriptions Prescription[]
  createdAt    DateTime             @default(now())
}

model Medicine {
  id           Int                   @id @default(autoincrement())
  name         String
  content      String
  unit         String
  prescriptions PrescriptionMedicine[]  
}


model Prescription {
  id         Int                  @id @default(autoincrement())
  code       String
  patient    Patient              @relation(fields: [patientId], references: [id])
  patientId  Int
  diagnoses  PrescriptionDiagnosis[]
  createdAt  DateTime             @default(now())
  advice     String?
  symptom    String?
  items      PrescriptionMedicine[]
  followUpDate DateTime?
  
}

model Diagnosis {
  id                      Int                      @id @default(autoincrement())
  name                    String
  code                    String
  description             String
  prescriptions           PrescriptionDiagnosis[]
}

model PrescriptionDiagnosis {
  prescription   Prescription @relation(fields: [prescriptionId], references: [id])
  prescriptionId Int
  diagnosis      Diagnosis    @relation(fields: [diagnosisId], references: [id])
  diagnosisId    Int
  note           String?      // Thêm ghi chú riêng cho mỗi chẩn đoán (nếu muốn)

  @@id([prescriptionId, diagnosisId])
}



model PrescriptionMedicine {
  id             Int @id @default(autoincrement())
  prescription   Prescription @relation(fields: [prescriptionId], references: [id])
  prescriptionId Int
  medicine       Medicine    @relation(fields: [medicineId], references: [id])
  medicineId     Int
  quantity       Int
  instruction    String
}

model User {
  id           Int      @id @default(autoincrement())
  username     String @unique
  email        String @unique
  password     String
  roles        UserRole[]
}

model Role {
  id           Int      @id @default(autoincrement())
  name         String
  users        UserRole[]
}

model UserRole {
  user   User @relation(fields: [userId], references: [id])
  userId Int
  role   Role @relation(fields: [roleId], references: [id])
  roleId Int

  @@id([userId, roleId])
}
